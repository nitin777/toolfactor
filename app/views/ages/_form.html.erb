<div class="admintextbox">
<div class="admintextbox-leftpart ">
<%= form_for @o_single do |f| %>
  <%#= f.error_messages %>

  <div>
    <%= f.label t("general.name") %>
    <%= f.text_field :name %>
	<span><% if @o_single.errors[:name].any? %>
		<%= t('general.filed_required') %></span>
	<% end %>
  </div>

  <p><%= f.submit :value => t("general.save") %>
<div class="btn"><%= link_to t("general.back"), ages_path %></div>
</p>
<% end %>
</div>
<div class="cl"></div>
</div>
