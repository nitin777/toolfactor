<div class="admintextbox">
<div class="admintextbox-leftpart ">
<%= form_for @o_single do |f| %>
  <%#= f.error_messages %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </p>
  <p><%= f.submit :value => t("general.save") %>
<div class="btn"><%= link_to t("general.back"), tools_path %></div>
</p>
<% end %>
</div>
<div class="cl"></div>
</div>
