<div class="editablebox">
<%= form_for @o_single do |f| %>
  <%#= f.error_messages %>

  <div class="field">
    <%= f.label t("general.name") %>
    <%= f.text_field :name %>
	<span><% if @o_single.errors[:name].any? %>
		<%= t('general.filed_required') %></span>
	<% end %>
  </div>
  <p>
    <%= f.label t("general.description") %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label t("general.image") %>
    <%= f.file_field :image %>
  </p>
  <p><%= f.submit :value => t("general.save") %>
<div class="btn"><%= link_to t("general.back"), tools_path %></div>
</p>
<% end %>

<div class="cl"></div>
</div>
