<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<% if @o_all %>
	<h3><%= t("general.tool_suggest") %></h3>

	<%= t("general.tool_name") %>: <strong><%= @o_all.name %></strong><br />
	<%= t("general.tool_description") %>: <strong><%= @o_all.description.html_safe %></strong><br />
	<%= t("general.tool_image") %>: <%= image_tag(@o_all.image) %><%= @o_all.image %><br />
	<%= t("general.factors") %>: 

	<% if params[:tool] %>
		<% params[:tool][:factors].each do |i, j| %>
			<strong><%= Factor.find(j.to_i).name %>, </strong>
		<% end %>
	<% end %>

<% else %>
<%= t("general.no_result") %>
<% end %>


