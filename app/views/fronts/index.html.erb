<div class="main-containt ">
<div class="pagestext">
<h3><%= t("general.find_person") %></h3>
<div class="contacttext">
		<%= form_tag fronts_path, :method => 'get', :id => "div_update_search_tool" do %>
        	
                <p><label><%= t("general.age") %>: <%= select_tag :age_id, options_for_select([["Select Age", ""]] + Age.all.map { |c| [c.name, c.id] }), :width => "30%"  %></label></p>
				
                <p><strong><%= t("general.factors") %>: </strong>

				  <% @j = 0 %>
				  <% for o_row_factors in Factor.all %>
					<% if @j % 2 == 0 %>	
						<label><%= radio_button_tag "tool[factors][#{@j}]", o_row_factors.id %> <%= o_row_factors.name %></label>
					<% else %>
						<label><%= radio_button_tag "tool[factors][#{@j-1}]", o_row_factors.id %> <%= o_row_factors.name %></label>
					<% end %>
					<% @j = @j + 1 %>
				  <% end %>

				</label></p>

				<p>
					<%= submit_tag t("general.find_person"), :name => nil %>
					<div class="cl"></div>
				</p>

            <div id="div_update"><%= render 'searchTool' %></div>
		<% end %>
	</div>
</div>
</div>


<script type="text/javascript">
    jQuery(document).ready(function(){
		$('#div_update_search_tool').submit(function() {
		    $.get($("#div_update_search_tool").attr("action"), $("#div_update_search_tool").serialize(), null, "script");
		    return false;
		});
	});
</script>
